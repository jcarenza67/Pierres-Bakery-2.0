    Layout = "_Layout";
}


<section class="hero">
    <div class="container">
        <h1 class="hero-title">Welcome Pierre!</h1>
        <p class="hero-description">Organize your vendors and their orders</p>
        <p class="hero-subtitle">Keep track of orders, prices, descriptions, and dates ordered</p>
        <a class="btn btn-primary btn-lg" href="/vendors" role="button">Browse Vendors</a>
    </div>
</section>

<section class="features">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2 class="feature-title">Efficient Vendor Management</h2>
                <p class="feature-description">Manage your vendors in one central location. Add new vendors, update their details, and keep track of their orders.</p>
            </div>
            <div class="col-md-4">
                <h2 class="feature-title">Order Tracking Made Easy</h2>
                <p class="feature-description">Track orders effortlessly. View order details, including type, description, quantity, price, and date.</p>
            </div>
            <div class="col-md-4">
                <h2 class="feature-title">Simplified Organization</h2>
                <p class="feature-description">Organize your vendors and orders for better efficiency. Stay on top of your bakery operations with ease.</p>
            </div>
        </div>
    </div>
</section>

<section class="cta">
    <div class="container">
        <h2 class="cta-title">Ready to Get Started?</h2>
        <p class="cta-description">Explore your vendors and streamline your bakery management process today!</p>
        <a class="btn btn-primary btn-lg" href="/vendors" role="button">Browse Vendors</a>
    </div>
</section>