@{
  Layout = "_Layout";
}

@using PierresBakery.Models;

<h1>Vendor List</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added.</h3>
}

@foreach (Vendor vendor in Model)
{
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">@Model.Name</h4>
      <p class="card-text">@Model.Description</p>
      <a href="/vendors" class="btn btn-primary">View Vendor</a>
    </div>
  </div>
}

<p><a href="/" class="btn btn-primary">Back home</a></p>
