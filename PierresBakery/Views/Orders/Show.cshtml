@{
    Layout = "_Layout";
}

<h1>Order Details</h1>

<div>
    <h3>Order Information</h3>
    <p><strong>Order Type:</strong> @Model.Type</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Date:</strong> @Model.Date</p>
</div>

<div>
    <h3>Vendor Information</h3>
    <p><strong>Vendor Name:</strong> @Model.Name</p>
</div>

<a href='/vendors/@Model["vendor"].Id'>Back to Vendor Details</a>
