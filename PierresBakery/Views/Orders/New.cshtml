@model PierresBakery.Models.Order

@{
    Layout = "_Layout";
}

<h1>Create a New Order</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="VendorId" value="@ViewBag.VendorId" />

    <div class="form-group">
        <label asp-for="Type">Order Type</label>
        <input class="form-control" asp-for="Type" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Order Description</label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Order Quantity</label>
        <input class="form-control" asp-for="Quantity" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Order Price</label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group">
        <label asp-for="Date">Order Date</label>
        <input class="form-control" asp-for="Date" />
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>