@{
    Layout = "_Layout";
}

<h1>Create a New Order</h1>

<form action="Create" method="post">
    <input type="hidden" for="VendorId"/>

    <div class="form-group">
        <label for="Type">Order Type</label>
        <input class="form-control" for="Type" />
    </div>

    <div class="form-group">
        <label for="Description">Order Description</label>
        <input class="form-control" for="Description" />
    </div>

    <div class="form-group">
        <label for="Quantity">Order Quantity</label>
        <input class="form-control" for="Quantity" />
    </div>

    <div class="form-group">
        <label for="Price">Order Price</label>
        <input class="form-control" for="Price" />
    </div>

    <div class="form-group">
        <label for="Date">Order Date</label>
        <input class="form-control" for="Date" />
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>